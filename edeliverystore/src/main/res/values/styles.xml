<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/color_app_status_bar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:editTextStyle">@style/CustomEditText</item>
        <item name="android:textViewStyle">@style/CustomTextViewStyle</item>
    </style>

    <style name="BottomNavigationBar" parent="AppTheme">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_app_button_text</item>
        <item name="android:background">@color/color_app_button</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CustomTextViewStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color_app_text</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="android:textSize">@dimen/size_app_text_regular</item>
    </style>


    <style name="TabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/size_app_text_regular</item>
        <item name="android:textColor">@color/color_app_label</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomTextInputLayout" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">@dimen/size_app_text_regular</item>
        <item name="android:textColorHint">@color/color_app_label</item>
        <item name="colorControlNormal">@color/color_app_label</item>
        <item name="colorControlActivated">@color/color_app_text</item>
        <item name="android:textColorHighlight">@color/color_app_label</item>
        <item name="android:textColorLink">@color/color_app_label</item>
        <item name="android:textColor">@color/color_app_label</item>
    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/size_app_text_regular</item>
        <item name="android:textColor">@color/color_app_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">255</item>
    </style>

    <style name="CustomTextInputLayoutWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">@dimen/size_app_text_regular</item>
        <item name="android:textColorHint">@color/color_app_label_white</item>
        <item name="colorControlNormal">@color/color_app_label_white</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="android:textColorHighlight">@color/color_app_label_white</item>
        <item name="android:textColorLink">@color/color_app_label_white</item>
        <item name="android:textColor">@color/color_app_label_white</item>
    </style>

    <style name="CustomEditTextWhite" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/size_app_text_regular</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">255</item>
    </style>

    <style name="CustomTextBlack" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/size_app_text_medium</item>
        <item name="android:textColor">@color/color_app_text</item>
    </style>

    <style name="CustomSwitch" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">@color/colorBlack</item>
    </style>


    <style name="CustomRadioButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/color_app_text</item>
        <item name="colorControlActivated">@color/color_app_text</item>
        <item name="android:textSize">@dimen/size_app_text_regular</item>
        <item name="android:textColor">@color/color_app_text</item>
    </style>

    <style name="CustomCheckbox" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/color_app_text</item>
        <item name="colorControlActivated">@color/color_app_text</item>
        <item name="android:textSize">@dimen/size_app_text_regular</item>
        <item name="android:textColor">@color/color_app_text</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/color_app_rating_bar</item>
        <item name="colorControlActivated">@color/color_app_rating_bar</item>
    </style>

    <style name="CustomTabStyle2" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@color/color_app_heading</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/colorBlack</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@color/color_app_theme</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="CustomAutoCompleteStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/color_app_text</item>
        <item name="android:textSize">@dimen/size_app_label_regular</item>
        <item name="android:textColorHint">@color/color_app_label</item>
    </style>

    <style name="RadioButtonStyle2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/color_app_label</item>
        <item name="colorAccent">@color/color_app_button</item>
        <item name="android:textSize">@dimen/size_app_text_regular</item>
    </style>

    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/horizontal_progress_bar</item>
        <item name="android:indeterminateDrawable">@drawable/horizontal_progress_bar</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>
</resources>
