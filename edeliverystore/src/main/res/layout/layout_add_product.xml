<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llFab"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="end|bottom"
    android:gravity="end|bottom"
    android:orientation="vertical"
    android:paddingEnd="@dimen/general_top_margin"
    android:paddingStart="@dimen/general_top_margin">


    <com.edelivery.store.widgets.CustomTextView
        android:id="@+id/btnAddProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/general_top_margin"
        android:background="@drawable/shape_red_btn"
        android:drawablePadding="@dimen/activity_horizontal_padding"
        android:elevation="6dp"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/activity_horizontal_padding"
        android:paddingEnd="@dimen/activity_horizontal_padding"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_padding"
        android:text="@string/text_product"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/size_app_text_regular"
        app:backgroundTint="@color/color_app_floating_button"
        app:drawableRightCompat="@drawable/ic_products_white"/>


    <com.edelivery.store.widgets.CustomTextView
        android:id="@+id/btnAddItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/general_top_margin"
        android:background="@drawable/shape_red_btn"
        android:drawablePadding="@dimen/activity_horizontal_padding"
        android:elevation="6dp"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/activity_horizontal_padding"
        android:paddingEnd="@dimen/activity_horizontal_padding"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_padding"
        android:text="@string/text_item"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/size_app_text_regular"
        app:drawableRightCompat="@drawable/ic_items_white"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/general_top_margin"
        android:clickable="true"
        android:src="@drawable/ic_plus"
        app:backgroundTint="@color/color_app_floating_button"
        app:layout_behavior=""/>


</LinearLayout>