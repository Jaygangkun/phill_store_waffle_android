<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="@dimen/activity_horizontal_padding"
              android:layout_marginStart="@dimen/activity_horizontal_padding"
              android:layout_marginTop="@dimen/activity_horizontal_padding"
              android:background="@color/color_app_wallet_bg"
              android:orientation="vertical">


    <LinearLayout
        android:id="@+id/llProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/ivWalletStatus"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/activity_horizontal_padding"
            android:background="@color/color_app_text"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_app_edit_text_padding"
            android:layout_marginEnd="@dimen/activity_horizontal_padding"
            android:layout_marginTop="@dimen/dimen_app_edit_text_padding"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.edelivery.store.widgets.CustomFontTextViewTitle
                android:id="@+id/tvTransactionState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/text_empty_string"
                android:textAlignment="viewStart"
                android:textSize="@dimen/size_app_label_regular"/>

            <com.edelivery.store.widgets.CustomTextView
                android:id="@+id/tvWithdrawalID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/text_empty_string"
                android:layout_marginTop="@dimen/activity_horizontal_padding"
                android:layout_marginBottom="@dimen/activity_horizontal_padding"
                android:textAlignment="viewStart"
                android:textColor="@color/color_app_text"
                android:textSize="@dimen/size_app_text_small"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.edelivery.store.widgets.CustomTextView
                    android:id="@+id/tvTransactionDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_app_edit_text_padding"
                    android:gravity="start"
                    android:text="@string/text_empty_string"
                    android:textAlignment="viewStart"
                    android:textColor="@color/color_app_text"
                    android:textSize="@dimen/size_app_text_small"/>

                <com.edelivery.store.widgets.CustomTextView
                    android:id="@+id/tvTransactionTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/text_empty_string"
                    android:textAlignment="viewStart"
                    android:textColor="@color/color_app_text"
                    android:textSize="@dimen/size_app_text_small"/>

            </LinearLayout>

        </LinearLayout>

        <com.edelivery.store.widgets.CustomFontTextViewTitle
            android:id="@+id/tvTransactionAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_app_edit_text_padding"
            android:layout_marginEnd="@dimen/activity_horizontal_padding"
            android:layout_marginTop="@dimen/dimen_app_edit_text_padding"
            android:gravity="end|top"
            android:text="@string/text_empty_string"
            android:textSize="@dimen/size_app_label_regular"
            />
    </LinearLayout>


</LinearLayout>