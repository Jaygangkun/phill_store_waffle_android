<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/cpv_default_thickness"
        android:padding="@dimen/cardview_default_elevation"
        android:src="@drawable/ic_black"/>

    <com.edelivery.store.widgets.CustomFontTextViewTitle
        android:id="@+id/tvSpecificationGroupName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="SpecificationGroup"
        android:textAlignment="viewStart"
        android:textColor="@color/color_app_text"
        android:textSize="@dimen/size_app_text_medium"/>


    <ImageView
        android:id="@+id/ivSpecGroupRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/cpv_default_thickness"
        android:src="@drawable/ic_cross"
        android:visibility="gone"/>

</LinearLayout>