<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llDocumentUpload"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_app_bg"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.edelivery.store.widgets.CustomTextView
                android:id="@+id/tvDocumentTittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:text="@string/app_name"
                android:textSize="@dimen/size_app_text_regular"
                android:textAllCaps="true"
                android:textColor="@color/color_app_text"
                app:typefaceTv="fonts/AvenirLTStd-Medium.otf"/>

            <com.edelivery.store.widgets.CustomTextView
                android:id="@+id/tvOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/color_app_heading"
                app:typefaceTv="fonts/AvenirLTStd-Medium.otf"/>
        </LinearLayout>


        <com.edelivery.store.widgets.CustomTextView
            android:id="@+id/tvIdNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginBottom="@dimen/dimen_app_edit_text_padding"
            android:layout_marginTop="@dimen/dimen_app_edit_text_padding"
            android:text="@string/text_id_number"
            android:textAlignment="viewStart"

            android:textColor="@color/color_app_text"
            android:textSize="@dimen/size_app_label_regular"
            android:visibility="visible"
            app:typefaceTv="fonts/AvenirLTStd-Medium.otf"/>

        <com.edelivery.store.widgets.CustomTextView
            android:id="@+id/tvExpireDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:text="@string/text_expire_date"
            android:textAlignment="viewStart"

            android:textColor="@color/color_app_text"
            android:textSize="@dimen/size_app_label_regular"
            android:visibility="visible"
            app:typefaceTv="fonts/AvenirLTStd-Medium.otf"/>

    </LinearLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivDocumentImage"
        android:layout_width="@dimen/bottom_margin_floatingBtn"
        android:layout_height="@dimen/bottom_margin_floatingBtn"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder"
        android:visibility="visible"
        app:riv_corner_radius="@dimen/cardview_default_radius"/>
</LinearLayout>
