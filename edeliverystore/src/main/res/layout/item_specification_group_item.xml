<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_horizontal_margin">

    <com.edelivery.store.widgets.CustomTextView
        android:id="@+id/tvSequenceNumber"
        style="@style/CustomTextBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/general_top_margin"
        android:padding="@dimen/cardview_default_elevation"
        android:text="0" />

    <com.edelivery.store.widgets.CustomTextView
        android:id="@+id/tvSpecificationName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="SpecificationGroup"
        android:textAlignment="viewStart"
        android:textColor="@color/color_app_text"
        android:textSize="@dimen/size_app_text_regular" />

    <com.edelivery.store.widgets.CustomTextView
        android:id="@+id/tvSpecificationPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textAlignment="viewEnd"
        android:textColor="@color/color_app_text"
        android:textSize="@dimen/size_app_text_regular" />

    <ImageView
        android:id="@+id/ivSpecificationRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/cpv_default_thickness"
        android:src="@drawable/ic_cross"
        android:visibility="gone" />

</LinearLayout>