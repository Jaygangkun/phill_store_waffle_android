<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_app_bg"
              android:gravity="center"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/dimen_app_edit_text_padding"
              android:paddingTop="@dimen/dimen_app_edit_text_padding">

    <CheckBox
        android:id="@+id/checkboxSpecification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/CustomCheckbox"/>

    <com.edelivery.store.widgets.CustomTextView
        android:id="@+id/tvSpeciName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_medium_margin"
        android:layout_weight="1"
        android:maxLines="2"
        android:text="@string/text_default"
        android:textAlignment="viewStart"

        android:textSize="@dimen/size_app_label_regular"
        app:typefaceTv="fonts/AvenirLTStd-Medium.otf"/>

    <com.edelivery.store.widgets.CustomTextView
        android:id="@+id/tvCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_medium_margin"
        android:text="$"
        android:textAlignment="viewStart"
        android:textSize="@dimen/size_app_text_regular"
        app:typefaceTv="fonts/AvenirLTStd-Medium.otf"/>

    <com.edelivery.store.widgets.CustomInputEditText
        android:id="@+id/etSpeciPrice"
        style="@style/CustomEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:gravity="start"
        android:hint="@string/text_price_hint"
        android:digits="0123456789."
        android:inputType="numberDecimal"/>

    <com.edelivery.store.widgets.CustomFontTextViewTitle
        android:id="@+id/tvDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_medium_margin"
        android:text="@string/text_default"
        android:textColor="@color/color_app_gray"
        android:textSize="@dimen/size_app_text_small"
        app:typefaceTv="fonts/AvenirLTStd-Medium.otf"/>

    <!--android:background="@drawable/text_selector"-->
</LinearLayout>