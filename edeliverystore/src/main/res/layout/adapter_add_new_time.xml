<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_app_bg"
              android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/llNewTime"
    android:visibility="gone">


    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingStart="@dimen/activity_horizontal_padding">

        <com.edelivery.store.widgets.CustomTextView
            android:id="@+id/tvFromTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"
            android:textColor="@color/color_app_text"
            android:textSize="@dimen/size_app_text_regular"
            app:typefaceInputEt="fonts/AvenirLTStd-Medium.otf"/>

        <com.edelivery.store.widgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/activity_horizontal_padding"
            android:paddingStart="@dimen/activity_horizontal_padding"
            android:text="To"
            android:textColor="@color/color_app_label"
            android:textSize="@dimen/size_app_text_small"
            app:typefaceInputEt="fonts/AvenirLTStd-Medium.otf"/>

        <com.edelivery.store.widgets.CustomTextView
            android:id="@+id/tvToTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"
            android:textColor="@color/color_app_text"
            android:textSize="@dimen/size_app_text_regular"
            app:typefaceInputEt="fonts/AvenirLTStd-Medium.otf"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivBullet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/text_image"
        android:padding="@dimen/general_top_margin"
        android:src="@drawable/ic_cross"/>
</LinearLayout>