<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/llProgress"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/loading_circle"/>

        <com.edelivery.store.component.CustomCircularProgressView
            android:id="@+id/ivProgressBarTwo"
            android:layout_width="@dimen/dimen_app_progress_bar"
            android:layout_height="@dimen/dimen_app_progress_bar"
            android:layout_gravity="center"
            android:padding="0dp"
            app:cpv_color="@color/colorBlack"
            app:cpv_indeterminate="true"
            app:cpv_thickness="3dp"/>
    </FrameLayout>
</LinearLayout>