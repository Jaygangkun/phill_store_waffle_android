<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <com.edelivery.store.widgets.CustomTextView
            android:id="@+id/tvAccountHolderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@drawable/background_item_section"
            android:maxLines="1"
            android:paddingBottom="@dimen/dimen_app_edit_text_padding"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/dimen_app_edit_text_padding"
            android:text="@string/text_name"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_app_label_regular"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/ivSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_app_edit_text_padding"
                android:src="@drawable/ic_checked"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/ivDeleteBankDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_app_edit_text_padding"
                android:padding="@dimen/dimen_app_edit_text_padding"
                android:src="@drawable/ic_cross"/>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:paddingStart="@dimen/activity_horizontal_margin">


        <com.edelivery.store.widgets.CustomTextView
            android:id="@+id/tvBankAccountNumber"
            style="@style/CustomTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:paddingBottom="@dimen/dimen_app_edit_text_padding"
            android:paddingTop="@dimen/dimen_app_edit_text_padding"
            android:text="Name"
            android:textColor="@color/color_app_text"/>


        <com.edelivery.store.widgets.CustomTextView
            android:id="@+id/tvRoutingNumber"
            style="@style/CustomTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:paddingBottom="@dimen/dimen_app_edit_text_padding"
            android:paddingTop="@dimen/dimen_app_edit_text_padding"
            android:text="Name"
            android:textColor="@color/color_app_text"/>

    </LinearLayout>
</LinearLayout>